separator_block_width=0
separator=false
align=center

[begin]
full_text=‚ó¢
interval=once
color=#555555

[topprocess]
command=echo "$(top -b -n1 | sed -n 8p | awk '{print $9 "%","(PID",$1",",$12 ")";}' | /usr/local/lib/i3blocks/graph --id=topprocess --max=100 --length=5 | /usr/local/lib/i3blocks/color --bg=222222 --fg=888888)"
markup=pango
interval=5

[temp]
command=/usr/local/lib/i3blocks/temperature | /usr/local/lib/i3blocks/graph --id=temp --max=100 --min=50 --length=5 | /usr/local/lib/i3blocks/color --bg=2a2a2a --fg=888888
markup=pango
interval=10

[cpu]
command=/usr/local/lib/i3blocks/cpu_usage | /usr/local/lib/i3blocks/graph --id=cpu --max=100 --length=5 | /usr/local/lib/i3blocks/color --bg=333333 --fg=888888 --label=CPU
markup=pango
interval=10

[load]
command=/usr/local/lib/i3blocks/load_average | /usr/local/lib/i3blocks/graph --max=4 --id=load --length=5 | /usr/local/lib/i3blocks/color --bg=3b3b3b --fg=888888 --label=‚õü
markup=pango
interval=10

[memory]
command=/usr/local/lib/i3blocks/memory | /usr/local/lib/i3blocks/color --bg=444444 --fg=888888 --label=üêè
markup=pango
interval=30

[swap]
command=/usr/local/lib/i3blocks/memory swap | /usr/local/lib/i3blocks/color --bg=4c4c4c --fg=888888 --label=‚áÜ
markup=pango
interval=30

[volume]
command=/usr/local/lib/i3blocks/volume 1 pulse | /usr/local/lib/i3blocks/color --bg=555555 --fg=ddddaa --label=üîâ
markup=pango
interval=once
signal=1

[battery]
command=/usr/local/lib/i3blocks/battery BAT0 | /usr/local/lib/i3blocks/graph --id=battery --max=100 --length=1 | /usr/local/lib/i3blocks/color --bg=5d5d5d --fg=aadddd --label=üîã
markup=pango
interval=30

[time]
command=echo "$(date '+%Y-%m-%d %H:%M:%S %Z'; date '+%d.%m %H:%M:%S %Z')" | /usr/local/lib/i3blocks/color --bg=666666 --fg=bbeebb --label=‚åö
markup=pango
interval=1


