#!/usr/bin/python
# This python file uses the following encoding: utf-8

import libxml2
import urllib
import sys
import codecs
import md5
import webbrowser
try:
    url = sys.argv[1]

    m = md5.new(url)
    filename = '/tmp/i3blocksrss_' + m.hexdigest()
    maxLength = 50
    if len(sys.argv) > 2:
        f = open(filename, 'r')
        webbrowser.open(f.read())
        f.close()

    rss = libxml2.parseDoc(urllib.urlopen(url).read())

    titles = rss.xpathEval('/rss/channel/item/title')
    urls = rss.xpathEval('/rss/channel/item/link')

    f = open(filename, 'w')
    f.write(urls[0].content)
    f.close()

    text = titles[0].content
    if len(text) > maxLength:
        text = text[:maxLength] + "â€¦"

    print text
    print text
except:
    print sys.exc_info()[0]
    print sys.exc_info()[0]