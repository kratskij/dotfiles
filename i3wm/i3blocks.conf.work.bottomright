separator_block_width=0
separator=false
color=#444444
align=center

[begin]
full_text=◢
interval=once
color=#555555

[volume]
command=/usr/local/libexec/i3blocks/volume 1 pulse | /usr/local/libexec/i3blocks/color --bg=222222 --fg=ddddaa --label=♪
markup=pango
interval=once
signal=1

[weather]
command=/usr/local/libexec/i3blocks/weather --limit=4 | /usr/local/libexec/i3blocks/color --bg=333333 --fg=bbffff
markup=pango
interval=3600

[time]
command=date '+%Y-%m-%d %H:%M:%S' | /usr/local/libexec/i3blocks/color --bg=444444 --fg=bbeebb --label=⌚
markup=pango
interval=1

