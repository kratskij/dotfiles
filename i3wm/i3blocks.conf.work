separator_block_width=10
separator=false
color=#444444

[topprocess]
command=echo "$(top -b -n1 | sed -n 8p | awk '{print $9 "%","(PID",$1",",$12 ")";}')"
interval=5
separator_block_width=24

[temp]
label=TEMP
command=/usr/local/libexec/i3blocks/temperature | /usr/local/libexec/i3blocks/graph temp 100 10
interval=10
separator_block_width=24

[cpu]
label=CPU
command=/usr/local/libexec/i3blocks/cpu_usage | /usr/local/libexec/i3blocks/graph cpu 100 10
interval=2
separator_block_width=24

[load]
label=LOAD
command=/usr/local/libexec/i3blocks/load_average | /usr/local/libexec/i3blocks/graph load 4 10
interval=10
separator_block_width=24

[memory]
label=MEM
command=/usr/local/libexec/i3blocks/memory
interval=30
separator_block_width=24

[swap]
label=SWAP
command=/usr/local/libexec/i3blocks/memory swap
interval=30
separator_block_width=24

[volume]
label=♪
command=/usr/local/libexec/i3blocks/volume
interval=once
signal=1
color=#DDDDAA

[battery]
label=BAT
#label=⚡
#command=/usr/local/libexec/i3blocks/battery BAT0
interval=30
color=#AADDDD

[time]
label=
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
color=#BBEEBB



