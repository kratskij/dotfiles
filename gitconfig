[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  subup = submodule update

  type = cat-file -t
  dump = cat-file -p
  wd = diff --color-words
  ws = show --color-words
  meld = difftool -y -t meld
  search = "!f() { git show :/$1; }; f"
[color]
    diff = always
    branch = auto
    status = auto
[push]
	default = current

[core]
  mergeoptions = --no-edit

[include]
  path = gitconfig_hist